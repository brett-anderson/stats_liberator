-# - @players.each do | player |
-#   = link_to player.name, player
= will_paginate @players
= form_tag players_path, :class => "navbar-search pull-left", :method => :get do
  = text_field_tag :search, nil, :class => "search-query span3", :placeholder => "Search"
%table.table.table-striped
  %tr
    %th.span1 pic
    %th.span1 Name
    %th.span1 Number
    %th.span1 Position
    %th.span1 Team
    %th.span1 Height
    %th.span1 Weight
  - @players.each do |player|
    %tr
      %td
        = image_tag player.image, class: "img-rounded", width: "50px"
      %td
        %a{href: "http://sports.yahoo.com/nhl/players/#{player.yahoo_id}/"}= "#{player.name}, #{player.yahoo_id}"
      %td
        = player.number
      %td
        = player.position
      %td
        = player.team
      %td
        = player.height
      %td
        = player.weight
